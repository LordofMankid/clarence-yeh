<style is:global>
	:root {
		--air-superiority-blue: #80a1c1ff;
		--tertiary: rgb(251, 252, 238);
		--tertiary-background: rgba(251, 252, 238, 0.8);
		--coral-pink: #ee9480ff;
		--dark: rgb(48, 38, 32);
		--secondary: #626267ff;
		--secondary-transparent: rgba(98, 98, 103, 0.75);
		--light: rgb(255, 255, 255, 0.9);

		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	p,
	a,
	h1,
	h2 {
		font-family: "CommitMono", sans-serif;
		color: var(--dark);
		text-decoration: none;
		margin: 0 auto;
	}

	@font-face {
		font-family: "CommitMono";
		src: url("/fonts/CommitMono-400-Regular.otf") format("opentype");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	body {
		width: 100%;
		margin: 0 0 0 0;
	}
	h2 {
		margin: 0 0 0 0;
	}
</style>
