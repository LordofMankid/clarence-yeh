---
import ProjectHeader from "../components/ProjectHeader";
import "@fontsource-variable/inter";
import "../styles/global.css";
import { CldImage } from "astro-cloudinary";
---

<html>
  <head> </head>
  <body class="font-inter w-full m-0 bg-blue-4">
    <div class="mx-auto" style="width: 80vw;">
      <ProjectHeader client:load />
    </div>
    <CldImage
      src="bear_grylls_wmxm8u"
      width={1200}
      height={800}
      alt="<Description>"
    />
    <div class="mx-auto" style="width: 60vw; margin-bottom: 100px;">
      <!-- <h1 class="text-42 font-normal text-dark mx-auto">{frontmatter.title}</h1> -->
      <slot />
    </div>

    <style is:global>
      /* Content-specific styles for MDX content */
      .content-container :is(p, h2, ul, li) {
        width: 40vw;
        margin: 0 auto;
      }

      .content-container h2 {
        font-size: 20px;
        font-weight: 500;
        margin-block: 10px;
      }

      .content-container ul {
        width: 40vw;
        padding-left: 4rem;
        margin-block: 10px;
      }

      .content-container a {
        text-decoration: underline;
      }

      /* Global typography */
      h1 {
        font-size: 42px;
        font-weight: 400;
        color: var(--dark, #302620);
        margin: 0 auto;
      }

      h2 {
        font-size: 47px;
        font-weight: 500;
        color: var(--dark, #302620);
        margin: 0 auto;
      }

      h3 {
        font-size: 20px;
      }

      p {
        font-size: 18px;
      }

      a,
      h1,
      h2 {
        color: var(--dark, #302620);
        text-decoration: none;
        margin: 0 auto;
      }

      code {
        font-family: Menlo, Monaco, "Lucida Console", "Liberation Mono",
          "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Courier New",
          monospace;
      }

      /* Project-specific image styles */
      .project-hero-image-container {
        display: flex;
        max-height: 500px;
        max-width: 80vw;
        margin-block: 50px;
      }

      .project-hero-image {
        border-radius: 20px;
        height: auto;
        display: block;
        margin: 0 auto;
        max-height: 500px;
        width: auto;
      }

      /* Add the color variables temporarily */
      :root {
        --dark: #302620;
        --blue-4: #eaf1ff;
      }
    </style>
  </body>
</html>
