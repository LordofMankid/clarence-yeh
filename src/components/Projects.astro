---
import Card from "./Card";
import SectionTitle from "./SectionTitle";
---

<div id="Projects">
  <SectionTitle title="PROJECTS" />

  <div id="content">
    <Card title="placeholder" subtitle="placeholder 2" date="placeholder 3" />
    <Card title="placeholder" subtitle="placeholder 2" date="placeholder 3" />
    <Card title="placeholder" subtitle="placeholder 2" date="placeholder 3" />
    <Card title="placeholder" subtitle="placeholder 2" date="placeholder 3" />
  </div>
</div>

<style>
  #Projects {
    min-height: 90vh;
  }

  #content {
    width: 80vw;
    margin: auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* 2 columns */
    gap: 104px; /* Gap between grid items */
  }
  @media (max-width: 700px) {
    #content {
      grid-template-columns: 1fr; /* Collapse to 1 column */
    }
  }

  .title {
    padding-top: 150px;
    padding-bottom: 10px;
    width: 80%;
    text-align: center;
    margin: auto;
    display: block;
  }
</style>
