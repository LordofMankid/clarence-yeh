---
import { Icon } from "astro-icon/components";
import Card from "./landing/Card";
import SectionTitle from "./SectionTitle";
import { getCollection } from "astro:content";
const projects = await getCollection("projects");
// const projectList = Object.values(projects);
---

<div class="min-h-full mt-40">
  <div class="grid grid-cols-1 md:grid-cols-1 sm:gap-16 lg:gap-28 w-1/3 m-auto">
    {
      projects
        .sort(
          (a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
        )
        .map((project) => {
          return (
            <Card
              title={project.data.title}
              subtitle={project.data.description}
              date={project.data.dateRange}
              projUrl={`/projects/${project.id}`}
              imageSrc={project.data.thumbnail}
              links={project.data.links}
              additionalInfo={project.data.additionalInfo}
              client:load
            />
          );
        })
    }
  </div>
</div>

<style>
  #content {
    width: 80vw;
    margin: auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* 2 columns */
    gap: 104px; /* Gap between grid items */
  }

  @media (min-width: 2500px) {
    #content {
      grid-template-columns: repeat(3, 1fr); /* 2 columns */
    }
  }

  .title {
    padding-top: 150px;
    padding-bottom: 10px;
    width: 80%;
    text-align: center;
    margin: auto;
    display: block;
  }
</style>
