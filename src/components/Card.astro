---
import "../styles/Card.scss";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  subtitle: string;
  date: string;
  url?: string;
  techStack: string[];
}

const { title, subtitle, date, url, techStack }: Props = Astro.props;

const styles = {
  headerText: {
    fontSize: "28px",
    fontWeight: 600,
  },
  dateText: {
    fontSize: "15px",
    fontWeight: 200,
  },
  subText: {
    fontSize: "18px",
    fontWeight: 200,
  },
};
---

<a href={url} class="card-link">
  <div class="card-container">
    <div class="image-container">
      <div class="tech-stack">
        {techStack ? techStack.map((skill) => <Icon name={skill} />) : null}
      </div>
    </div>
    <div class="text-container">
      <div class="header-container">
        <p style={styles.headerText}>{title}</p>
        <p style={styles.dateText}>{date}</p>
      </div>
      <p style={styles.subText}>{subtitle}</p>
    </div>
  </div>
</a>
