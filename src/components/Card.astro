---
import GitHubButton from "./GithubButton.astro";
interface Props {
	title: string;
	body: string;
	href: string;
	techStack?: string[];
}

const { href, title, body, techStack } = Astro.props;
---

<div class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="tech-stack-desktop">Made with: {techStack}</p>
		<p class="tech-stack-mobile">{techStack}</p>
		<p class="description">
			{body}
		</p>
	</a>
	<GitHubButton href="/" />
</div>
<style>
	.link-card {
		display: flex;
		flex-wrap: wrap;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		background-color: rgb(253, 253, 253);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		border: 1px solid var(--tertiary-darker);
	}
	.link-card > a {
		display: flex;
		flex-wrap: wrap;
		min-width: 250px;
		text-decoration: none;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		opacity: 0.8;
	}

	.tech-stack-desktop {
		height: 50px;
		display: flex;
		align-items: center;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
		border-radius: 8px;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: var(--air-superiority-blue);
		border-radius: 8px;
	}

	/* hide these classes in mobile view */
	.description {
		display: none;
	}

	.tech-stack-desktop {
		display: none;
	}

	.project-links {
		display: block;
		flex-basis: 100%;
	}
	@media screen and (min-width: 768px) {
		.link-card > a {
			min-width: 650px;
		}

		.description {
			display: block;
		}
	}
</style>
