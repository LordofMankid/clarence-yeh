---
import GitHubButton from "./GithubButton.astro";
import { Image } from "astro:assets";
import placeholder from "../assets/image-placeholder.svg";
interface Props {
	title: string;
	body: string;
	href: string;
	techStack?: string[];
}

const { href, title, body, techStack } = Astro.props;
---

<div class="card">
	<div class="link-card">
		<a href={href}>
			<div class="text">
				<h2>
					{title}
				</h2>

				<p class="description">
					{body} &rarr;
				</p>
				<hr />
				<p class="tech-stack-desktop">Made with: {techStack}</p>
				<p class="tech-stack-mobile">{techStack}</p>
			</div>
			<div class="image">
				<img src={placeholder.src} />
			</div>
		</a>
	</div>

	<GitHubButton href="/" />
</div>

<style>
	.card {
		display: block;
		margin-top: 20px;
	}

	.link-card {
		display: block;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		outline: 1px solid var(--tertiary-darker);
		border-radius: 8px;
		height: 75px;
		transition: max-width 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card > a {
		display: flex;
		height: 100%;
		box-sizing: border-box;
		flex-wrap: wrap;
		min-width: 250px;
		text-decoration: none;
		padding: calc(1.5rem - 5px);
		border-radius: 8px;
		gap: 20px;
		background-color: rgb(253, 253, 253);
		opacity: 0.8;
	}

	.tech-stack-desktop {
		height: 50px;
		display: flex;
		align-items: center;
	}

	.text {
		flex: 1;
	}

	hr {
		display: none;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		font-size: small;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
		max-width: 595px;
		border-radius: 8px;
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: var(--air-superiority-blue);
		border-radius: 8px;
	}

	/* hide these classes in mobile view */
	.description {
		display: none;
	}

	.tech-stack-desktop {
		display: none;
	}

	.project-links {
		display: block;
	}

	.image {
		max-width: 0px;
		overflow: hidden;
		opacity: 0;
		transition:
			max-width 0.6s cubic-bezier(0.22, 1, 0.36, 1),
			opacity 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	@media screen and (min-width: 768px) {
		.link-card {
			max-width: 450px;
			height: 179px;
		}

		.link-card > a {
			height: 179px;
			max-height: 179px;
		}
		.description {
			display: block;
		}

		.tech-stack-desktop {
			display: block;
		}

		.tech-stack-mobile {
			display: none;
		}

		.link-card:is(:hover, :focus-within) .image {
			max-width: 150px;
			display: block;
			opacity: 1;
		}

		.text {
			width: 450px;
		}
	}
</style>
