---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  subtitle: string;
  date: string;
  url?: string;
  techStack: string[];
}

const { title, subtitle, date, url, techStack }: Props = Astro.props;

const styles = {
  headerText: {
    fontSize: "28px",
    fontWeight: 600,
  },
  dateText: {
    fontSize: "15px",
    fontWeight: 200,
  },
  subText: {
    fontSize: "18px",
    fontWeight: 200,
  },
};
---

<a href={url} class="block no-underline text-inherit">
  <div
    class="flex flex-col transition-transform duration-300 ease-in-out hover:scale-110"
  >
    <div
      class="relative aspect-[8/5] pb-[10%] rounded-[40px] bg-blue-3 shadow-[0px_10px_15px_var(--blue-7)]"
    >
      <div class="flex justify-end gap-0.5 h-5 mt-6 mx-12">
        {techStack ? techStack.map((skill) => <Icon name={skill} />) : null}
      </div>
    </div>
    <div class="flex flex-col gap-1">
      <div class="flex justify-between mt-5">
        <p style={styles.headerText}>{title}</p>
        <p style={styles.dateText}>{date}</p>
      </div>
      <p style={styles.subText}>{subtitle}</p>
    </div>
  </div>
</a>
